@model IEnumerable<Category>


<a href="/Admin/category/Create" class="btn btn-primary m-1 form-control w-100"> <i class="fa-solid fa-user-plus"></i> Create</a>
<table class="table table-dark table-striped ">
    <thead>
        <tr>
            <th>Id</th>
            <th>Category Name</th>
            <th>Update</th>
            <th>Detail</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CategoryName</td>
                <td>
                    <a href="/Admin/category/Update/@item.Id" class="btn btn-info w-29">Update  <i class="fa-solid fa-wrench"></i></a>
                </td>

                <td>
                    <a href="/Admin/category/Detail/@item.Id" class="btn btn-success w-29">Detail  <i class="fa-solid fa-clock-rotate-left"></i></a>
                </td>

                <td>
                    <a href="/Admin/category/Delete/@item.Id" class="btn btn-danger w-29 ">Delete  <i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>




















