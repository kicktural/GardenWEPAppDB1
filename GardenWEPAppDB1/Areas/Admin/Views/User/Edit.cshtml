@model User
@inject Microsoft.AspNetCore.Identity.UserManager<User> _usermanager


<a href="/Admin/user" class="btn btn-outline-info" style="accent-color"> <i class="fa-solid fa-left-long"></i>  User Back</a>
<table class="btn btn-success pull-left p-2 ">
    <tr class="m-4">
        <td class="m-4">@Model.FistName</td>
        <td>

        <td class="m-2">@Model.LastName</td>

        </td>
        <td>
        <td class="m-2">@Model.Email</td>
        </td>
    </tr>
</table>

<table class="table table-dark">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Delete</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in await _usermanager.GetRolesAsync(Model))
        {
            <tr>
                <td>@item</td>
                <td>
                    <a asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-Userid="@Model.Id" asp-route-Role="@item" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>