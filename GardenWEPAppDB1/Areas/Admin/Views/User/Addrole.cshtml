@using GardenWEPAppDB1.ViewModelVM;
@model RoelModelVM

<form method="post">
    <input type="hidden" value="@Model.User.Id" />
    <a href="/Admin/user" class="btn btn-outline-primary m-2"><i class="fa-solid fa-left-long"></i> Role Back</a>
    <select class="form-select form-select-lg mb-3 form-control" name="role" aria-label=".form-select-lg example">
        @foreach (var role in Model.Roles)
        {
            <option value="@role">@role</option>
        }
    </select>
    <input type="submit" class="btn btn-success" value="Add Role" />
</form>


