@model List<Apple>

    
<a href="/Admin/Apple/Create" class="btn btn-outline-success form-control w-100">Create </a>
    <table class="table table-dark table-hover table-striped">
        <thead>
            <tr>
             <th>Id</th>
            <th>Title</th>
            <th>View Count</th>
            <th>Tags</th>
            <th>Photo</th>
            <th>Create by</th>
            <th>Create Data</th>
            </tr>
        </thead>
         <tbody>
                @foreach (var item in Model)
             {
         <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.ViewCount</td>

            <td>
            @foreach (var Tag in item.ArticleTag)
            {
                <span>@Tag.tag.TagName</span>
            }
        </td>
        <td>
            <img src="@item.PhotoUrl" width="150" alt="">
        </td>
         <td> @item.User.FistName </td>
         <td>@item.CreateDate.ToString("dd/MMMM")</td>
         <td>
            <a href="#" class="btn btn-warning">Edit</a>            
             <form method="post" asp-action="Delete" asp-route-id="@item.Id">
                 <button type="submit" onclick="return confirm('Do you want to delete this Apple?: @item.Title')" class="btn btn-danger">Delete</button>
             </form>
         </td>
        </tr>        
       }
    </tbody>
    </table>
   
