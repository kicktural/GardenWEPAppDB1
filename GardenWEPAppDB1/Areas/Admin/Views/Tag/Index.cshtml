@model List<Tag>


<a href="/Admin/tag/Create" class="btn btn-primary m-1 form-control w-100"> <i class="fa-solid fa-user-plus"></i> Create</a>
<table class="table table-dark table-striped ">
    <thead>
        <tr>
            <th>Id</th>
            <th>TagName</th>
            <th>Update</th>
            <th>Detail</th>  
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.TagName</td>          
                 <td>
                    <a href="/Admin/tag/Update/@item.Id" class="btn btn-info w-29">Update  <i class="fa-solid fa-wrench"></i></a>
                 </td>

                  <td>
                    <a href="/Admin/Tag/Detail/@item.Id" class="btn btn-success w-29">Detail  <i class="fa-solid fa-clock-rotate-left"></i></a>
                  </td>

                  <td>
                    <a href="/Admin/Tag/Delete/@item.Id" class="btn btn-danger w-29 ">Delete  <i class="fa-solid fa-trash"></i></a>
                  </td>            
            </tr>
        }
    </tbody>
</table>
